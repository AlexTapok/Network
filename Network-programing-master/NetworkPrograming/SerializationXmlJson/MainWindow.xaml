<Window x:Class="SerializationXmlJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Name="btnStart" Content="Serialize" Click="btnStart_Click_1"/>
            <Button Name="btnEnd" Content="Deserialize" Click="btnEnd_Click_1"/>
            <GroupBox Height="50" Header="Serialization Type">
                <StackPanel Orientation="Horizontal">
                       <RadioButton Name="rb_Xml" Content="Xml Serialization" Checked="rb_Xml_Checked_1"/>
                    <Label Name="lbl_Status" Width="280"/>
                    <RadioButton Name="rb_Json" Content="JSON Serialization" Checked="rb_Json_Checked_1"/>
                </StackPanel>
            </GroupBox>
            <TextBox Name="tbx_Data" Height="220" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
